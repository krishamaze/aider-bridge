{
    "manifest_version":  3,
    "name":  "Aider Bridge",
    "version":  "1.0.0",
    "description":  "Claude/Perplexity ? Aider Integration",
    "permissions":  [
                        "activeTab",
                        "scripting",
                        "storage"
                    ],
    "host_permissions":  [
                             "https://claude.ai/*",
                             "https://www.perplexity.ai/*",
                             "http://localhost:5000/*"
                         ],
    "action":  {
                   "default_popup":  "popup.html",
                   "default_icon":  {
                                        "16":  "icon-16.png",
                                        "48":  "icon-48.png",
                                        "128":  "icon-128.png"
                                    }
               },
    "content_scripts":  [
                            {
                                "matches":  [
                                                "https://claude.ai/*",
                                                "https://www.perplexity.ai/*"
                                            ],
                                "js":  [
                                           "content.js",
                                           "draggable-button.js"
                                       ],
                                "css":  [
                                            "draggable-button.css"
                                        ],
                                "run_at":  "document_end"
                            }
                        ],
    "icons":  {
                  "16":  "icon-16.png",
                  "48":  "icon-48.png",
                  "128":  "icon-128.png"
              }
}
